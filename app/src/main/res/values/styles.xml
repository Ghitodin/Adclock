<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SwitchButtonRed">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorButtonNormal">@color/whiteBackground</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Style for Toggle buttons with days of the week. -->
    <style name="AlarmDayToggle" parent="SelectableButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/selector_day_toggles</item>
    </style>

    <style name="SelectableButton">
        <item name="android:background">?selectableItemBackground</item>
    </style>
</resources>
